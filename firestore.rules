rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas simplificadas sin autenticaci贸n
    // Todos pueden leer y escribir eventos
    match /events/{eventId} {
      // Permitir lectura a todos
      allow read: if true;
      
      // Permitir creaci贸n a todos
      allow create: if true;
      
      // Permitir actualizaci贸n solo al propietario del evento
      allow update: if request.resource.data.userId == resource.data.userId;
      
      // Permitir eliminaci贸n solo al propietario del evento
      allow delete: if true;
    }
  }
}
